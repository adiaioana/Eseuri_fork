{
  "name": "svelte-app",
  "version": "1.0.0",
  "scripts": {
    "dev": "routify -c dev-vite ",
    "dev:windows": "npm run open & routify -c dev-vite ",
    "build": "routify -b && vite build && npm run brotli:dist",
    "dev-vite": "vite",
    "serve-vite": "vite preview",
    "brotli:dist": "node br.js",
    "open": "start http://localhost:3000",
    "validate": "svelte-check",
    "format": "prettier -w src",
    "test": "jest src",
    "test:watch": "npm t -- --watch"
  },
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@babel/preset-env": "^7.13.10",
    "@rollup/plugin-typescript": "^8.2.0",
    "@roxi/routify": "^2.14.0",
    "@svitejs/vite-plugin-svelte": "^0.9.4",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/svelte": "^3.0.3",
    "@tsconfig/svelte": "^1.0.10",
    "@types/html-minifier": "^4.0.0",
    "@types/jest": "^26.0.20",
    "@types/testing-library__jest-dom": "^5.9.5",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.17.0",
    "autoprefixer": "^10.2.5",
    "babel-jest": "^26.6.3",
    "brotli": "^1.3.2",
    "eslint": "^7.21.0",
    "eslint-plugin-jest": "^24.1.9",
    "eslint-plugin-svelte3": "^3.1.2",
    "glob": "^7.1.6",
    "html-minifier": "^4.0.0",
    "jest": "^26.6.3",
    "open": "^7.4.2",
    "postcss": "^8.2.7",
    "prettier": "^2.2.1",
    "prettier-plugin-svelte": "^2.2.0",
    "svelte": "^3.35.0",
    "svelte-check": "^1.2.3",
    "svelte-jester": "^1.3.0",
    "svelte-preprocess": "^4.6.9",
    "tailwindcss": "^2.0.3",
    "ts-jest": "^26.5.3",
    "tslib": "^2.1.0",
    "typescript": "^4.2.3",
    "vite": "^2.0.5",
    "vite-plugin-windicss": "^0.6.11",
    "windicss": "^2.3.0"
  },
  "dependencies": {
    "renderless-svelte": "^1.5.0"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.svelte$": [
        "svelte-jester",
        {
          "preprocess": true
        }
      ],
      "^.+\\.ts$": "ts-jest",
      "^.+\\.js$": "babel-jest"
    },
    "moduleFileExtensions": [
      "js",
      "ts",
      "svelte"
    ],
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom/extend-expect"
    ]
  }
}
